setcollision(2)

decl alive
alive=1

decl ctr
ctr = 0

setsprite(160)
setcol(3, 3, 0)

while ( alive > 0 ) {

    if ( ctr == 0 )   { setvel(1, 0) }
    if ( ctr == 100 ) { setvel(0, 1) }
    if ( ctr == 110 ) { setvel(0-1, 0) }
    if ( ctr == 210 ) { setvel(0, 0-1) }
    if ( ctr == 220 ) { ctr = 0-1 }

    ctr = ctr + 1

    if ( getcollision(3)  )
    {
        setcol(3, 0, 0)
        alive = alive - 1
    }

}

setvel(0-6, 0)
setcol(3, 3, 3)

