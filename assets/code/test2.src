decl loop
loop = 1

decl x
x = 16

decl y
y = 16

decl button
button = 0

setsprite(29, 8)
setcol(0, 2, 0)

while ( loop <= 999 ) {

    button = getinput(1)
    if ( button ) {
        y = y - 1
    }

    button = getinput(2)
    if ( button ) {
        x = x + 1
    }

    button = getinput(3)
    if ( button ) {
        y = y + 1
    }

    button = getinput(4)
    if ( button ) {
        x = x - 1
    }

    setpos( x, y )
}

