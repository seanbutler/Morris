decl lives
lives = 3

decl button
button = 0

decl dx
decl dy

setsprite(192)
setcol(3, 2, 2)

while ( lives > 0 ) {

    dx=0 dy=0

    if ( getinput(1) ) { dy=0-2 }
    if ( getinput(2) ) { dx=2 }
    if ( getinput(3) ) { dy=2 }
    if ( getinput(4) ) { dx=0-2 }

    setvel(dx, dy)

    if ( getinput(5) ) {
        spawn("assets/code/sparkle.src")
    }
}

