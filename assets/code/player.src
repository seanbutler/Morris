decl lives
lives = 3

decl button
button = 0

setsprite(243)
setcol(2, 0, 2)

while ( lives > 0 ) {

    button = getinput(1)
    if ( button ) {
        setvel(0, 0-2)
    }

    button = getinput(2)
    if ( button ) {
        setvel(2, 0)
    }

    button = getinput(3)
    if ( button ) {
        setvel(0, 2)
    }

    button = getinput(4)
    if ( button ) {
        setvel(0-2, 0)
    }

}

